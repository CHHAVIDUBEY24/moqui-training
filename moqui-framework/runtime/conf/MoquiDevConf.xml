<?xml version="1.0" encoding="UTF-8"?>
<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-3.xsd">

    <!-- ================= DATABASE ================= -->

    <default-property name="entity_ds_db_conf" value="mysql8"/>
    <default-property name="entity_ds_host" value="127.0.0.1"/>
    <default-property name="entity_ds_port" value="3306"/>
    <default-property name="entity_ds_database" value="moqui"/>
    <default-property name="entity_ds_user" value="moqui"/>
    <default-property name="entity_ds_password" value="@12345abC"/>
<!--    <default-property name="webapp_default_screen" value="apps"/>-->

    <!-- ================= RUNTIME ================= -->

    <default-property name="instance_purpose" value="dev"/>
    <default-property name="webapp_http_port" value="8080"/>

    <!-- ================= LOGGING ================= -->

    <default-property name="log_level" value="INFO"/>

    <!-- ================= COMPONENTS ================= -->

    <component-list>
        <component location="component/party"/>
    </component-list>

    <!-- ================= ENTITY FACADE ================= -->

    <entity-facade>
        <datasource group-name="transactional"
                    database-conf-name="mysql8"
                    schema-name=""
                    runtime-add-missing="false"
                    startup-add-missing="true">
            <inline-jdbc pool-maxsize="50"
                         jdbc-uri="jdbc:mysql://${entity_ds_host}:${entity_ds_port}/${entity_ds_database}?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=US/Pacific"
                         jdbc-username="${entity_ds_user}"
                         jdbc-password="${entity_ds_password}"/>
        </datasource>
    </entity-facade>

</moqui-conf>
